<?xml version='1.0' encoding='utf-8'?>
<widget id="org.radarcns.ct" version="1.0.0"
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CordovaTest</name>
    <description>
        Test service background plugins and send data to server.
    </description>
    <author email="dev@radar-cns.org" href="http://radar-cns">
        RADAR Team
    </author>

    <content src="index.html" />

    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <engine name="android" spec="~5.2.2" />
    <engine name="ios" spec="~4.2.1" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device-motion" spec="~1.2.2" />
</widget>
